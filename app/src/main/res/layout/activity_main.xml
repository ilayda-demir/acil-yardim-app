<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#ffffff"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:gravity="center"
        android:orientation="vertical">

        <!-- TC GÖSTER -->
        <TextView
            android:id="@+id/tvTcGoster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TC: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal" />

        <!-- DURUM BUTONLARI -->
        <Button
            android:id="@+id/btnDurumX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxWidth="600dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#007BFF"
            android:text="Gıda paketine ihtiyacım var."
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnDurumEsittir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#22AB03"
            android:maxWidth="600dp"
            android:text="İlk yardım paketine ihtiyacım var."
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnDurumUnlem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#DE0000"
            android:maxWidth="600dp"
            android:text="Acil Müdahale ekiplerine ihtiyacım var."
            android:textColor="#ffffff" />

        <!-- DURUM GÖSTERGESİ -->
        <TextView
            android:id="@+id/tvDurum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxWidth="600dp"
            android:layout_gravity="center_horizontal"
            android:text="İhtiyacınız: Henüz Seçilmedi."
            android:textSize="18sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- KONUM AL -->
        <Button
            android:id="@+id/btnKonumAl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#673AB7"
            android:maxWidth="600dp"
            android:text="Konumu Al"
            android:textColor="#ffffff" />

        <!-- KONUM METNİ -->
        <TextView
            android:id="@+id/tvKonum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Konum: Henüz Alınmadı."
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal" />

        <!-- GÖNDER BUTONU -->
        <Button
            android:id="@+id/btnGonder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FF5722"
            android:maxWidth="600dp"
            android:paddingStart="24dp"
            android:paddingTop="16dp"
            android:paddingEnd="24dp"
            android:paddingBottom="16dp"
            android:text="Bilgileri göndermek için tıklayınız."
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
