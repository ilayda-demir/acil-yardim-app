<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="24dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TC Kimlik No ile Giriş"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/etTcKimlik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxWidth="600dp"
            android:layout_gravity="center_horizontal"
            android:hint="TC Kimlik No"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="#000000"
            android:background="@android:drawable/edit_text"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnGirisYap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:backgroundTint="#6B1583"
            android:maxWidth="600dp"
            android:text="Giriş Yap"
            android:textColor="#ffffff" />


        <TextView
            android:id="@+id/tvAciklama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Bu uygulama, afet ve acil durum anlarında yardım taleplerinizi hızlıca iletmenizi sağlar.\nTC kimlik numaranızla giriş yaptıktan sonra, ihtiyacınızı seçip konumunuzu paylaşarak yardım ekiplerine doğrudan ulaşabilirsiniz."
            android:textColor="#444444"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:textAlignment="center" />
    </LinearLayout>
</ScrollView>
